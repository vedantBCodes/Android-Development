<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--    Adding normal images (.jpg , .png or .jpeg files)-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="Digital marketing image"
        android:src="@drawable/digitalImage" />

    <!--    Adding vector files (.svg files) -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="Svg file image"
        android:src="@drawable/svgimage" />

    <!--    Adding text directly -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Hii I am vedant and i am a computer science student. I have done my 10th from SMH udgir and 12th from NBT jamkhed"
        android:textColor="#E2C7C2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--    Adding text by defining a string (in string.xml) -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="492dp"
        android:padding="10dp"
        android:text="@string/about_me"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="12"
        android:gravity="center_horizontal"
        android:hint="Enter your name : "
        android:inputType="text"
        android:textColor="@color/black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E2C7C2"
        android:text="Contact Us"
        android:textColor="@color/black" />

</LinearLayout>